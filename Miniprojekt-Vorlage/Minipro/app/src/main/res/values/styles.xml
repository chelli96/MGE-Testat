<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarWidgetTheme">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/ButtonTheme</item>

    </style>

    <style name="FormStyle">
        <item name="android:height">32dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="LoginStyle">
        <item name="android:background">?colorAccent</item>
        <item name="android:height">32dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="ReservationButton">
        <item name="android:height">32dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:padding">8dp</item>
    </style>

<style name="ButtonTheme" parent="Widget.AppCompat.Button">
<item name="android:textColor">#ffffff</item>
</style>

</resources>
